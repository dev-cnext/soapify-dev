<div class="max-w-md">
    <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
    <div class="my-4">
        <p class="text-base md:text-xl leading-normal" >{{ section.settings.subtext_title }}</p>
    </div>
    <div class="my-4">
        {%  if section.settings.button_url == blank %}
            {% assign shop_url = shop.secure_url %}
        {% else %}
            <a href="{{ section.settings.button_url }}" class="px-4 inline py-2 text-base font-medium shadow bg-green-600 hover:bg-green-800 text-white">{{ section.settings.button_label }}</a>
        {% endif %}
    </div>
</div>
<h1></h1>
<p></p>

{% schema %}
    {
        "name": "Template 404",
        "tag": "section",
        "class": "flex item-center justify-center text-center py-7 h-screen",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "default": "404",
                "label": "404 heading"

            },
            {
                "type": "text",
                "id": "subtext_title",
                "default": "The page you are looking for is not found",
                "label": "404 Subtext"
            },
            {
                "type": "text",
                "id": "button_label",
                "default": "Back to Home page",
                "label" : "Button label"
            },
            {
                "type": "text",
                "id": "button_url",
                "label" : "Button Link"
            }
        ]
    }
{% endschema %}